# Build DEv image with hot rebuild
FROM golang AS Dev

ENV CLIDIR=promotion

ENV CLINAME=${CLIDIR}Client
WORKDIR /go/src/goTempM
RUN go get github.com/githubnemo/CompileDaemon
ENV GO111MODULE=on
COPY ./go.mod ./go.sum ./
RUN go mod download
COPY ./$CLIDIR ./$CLIDIR
COPY ./user/proto ./user/proto
#COPY ./go.mod ./go.sum ./
#RUN go get -d  -v ./...
RUN go build -o $CLINAME ./$CLIDIR/client/
EXPOSE 50051
#CMD ["./userClient"]
CMD ./$CLINAME

# Compile the Alpine version of the application
FROM Dev AS AlpBuild
ENV CLIDIR=promotion

ENV CLINAME=${CLIDIR}ClientAlp
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o $CLINAME ./$CLIDIR/client/

# Build the Alpine image
FROM alpine

ENV CLIDIR=promotion

ENV CLINAME=${CLIDIR}ClientAlp
RUN apk --no-cache add ca-certificates
WORKDIR /goTempM
COPY --from=AlpBuild /go/src/goTempM/$CLINAME $CLINAME
#CMD ["./userClientAlp"]
CMD ./$CLINAME